<%= render "shared/second-header"%>
<div class= "cart-main" %>

<div class='form-wrap2'>
  <div class='form-header'>
    <div class='cart-header'>
 <%= "#{@user.nickname}さんのカートの中身"%>
 </div>
  <div class="form-group">
    <div class='form-text-wrap'>

    <div class='item-img-content'>
      <% @user.cart.items.each do |item| %>
        <div class="cart-item">
          <%= link_to item_path(item) do %>
            <div class="cart-item-info">
              <%= image_tag item.images[0].variant(resize: '200x200'), class:"buy-item-img" %>
              <div class="item-details">
                <p class="item-font"><%= item.name %></p>
                <span class="item-font"><%= item.price %>円</span>
              
                <span class="item-font"><%= item.shipping_charge.name %></span>
              </div>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>

          </div>
          </div>
     </div>     
  </div>
</div>

<%= render "shared/second-footer"%>